<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Bộ Lọc"
            android:textColor="@color/mainColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvOto"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons8_smartphone_50px"  />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#B5D5D4D4"
                    android:gravity="center_horizontal"
                    android:text="Điện thoại"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvXeMay"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons8_ipad_50px" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Máy tính bảng"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:background="#B5D5D4D4"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvXetai"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons8_laptop_with_cursor_50px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#B5D5D4D4"
                    android:gravity="center_horizontal"
                    android:text="Laptop"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvXedien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons8_my_computer_50px" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Máy tính để bàn"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:background="#B5D5D4D4"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvXedap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons8_tv_50px"  />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tivi,Âm thanh"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:background="#B5D5D4D4"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvKhac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons8_more_100px_1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khác"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:background="#B5D5D4D4"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>